<%- include('layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <h1>Category Page Content</h1>

      <div class="table-responsive">
        <table class="table table-striped text-center my-5">
          <thead>
            <tr class="table-dark">
              <th>Category ID</th>
              <th>Category Name</th>
              <th>Category Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((item, index) => { %>
            <tr class="align-middle">
              <!-- <td><%= index %></td> -->
              <td><%= item.categoryId %></td>
              <td><%= item.categoryName %></td>
              <td><%= item.categoryDescription %></td>
              <td>
                <a href="/editProduct/<%= item._id %>" class="text-success"
                  ><i class="fas fa-edit fa-lg mx-1"></i
                ></a>

                <a href="http://localhost:4000/api/category/deleteCategory/<%= item._id %>" class="text-danger" method="Delete"
                  ><i class="fa-regular fa-trash-can fa-lg mx-1"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
