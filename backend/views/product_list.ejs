<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1> Products Page Content </h1>

            <div class="table-responsive">
                    <table class="table table-striped text-center my-5">
                        <thead>
                            <tr class="table-dark">
                                <th> Product ID </th>
                                <th> Product Name </th>
                                <th> Product Price </th>
                                <th> Product Description </th>
                                <th> Category </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% products.forEach((item, index) => { %>
                                <tr class = "align-middle">
                                  <!-- <td><%= index %></td> -->
                                  <td><%= item.productId %></td>
                                  <td><%= item.productName %></td>
                                  <td><%= item.productPrice %></td>
                                  <td><%= item.productDescription %></td>
                                  <td><%= item.category%></td>
                                  <td>
                                    <a href="/editProduct/<%= item._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                
                                    <a href="/deleteProduct/<%= item._id %>" class="text-danger"
                                    ><i class="fa-regular fa-trash-can fa-lg mx-1"></i
                                    ></a>
                                  </td>
                                </tr>
                              <% }) %>

                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>